<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="movie"
            type="com.sol.movie.ui.data.Movie" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small">

            <ImageView
                android:id="@+id/imagePoster"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/zero_dp"
                android:contentDescription="@string/image_poster"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                app:setPosterImage = "@{movie.poster??@string/empty_string}"
                app:layout_constraintBottom_toTopOf="@id/barrier"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_tiny"
                android:textColor="@color/black"
                android:textSize="@dimen/tittle_text_size"
                android:textStyle="bold"
                android:text="@{movie.title??@string/empty_string}"
                app:layout_constraintStart_toEndOf="@id/imagePoster"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/app_name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_tiny"
                android:layout_marginTop="@dimen/margin_tiny"
                android:textColor="@color/black"
                android:text="@{movie.year}"
                app:layout_constraintStart_toEndOf="@id/imagePoster"
                app:layout_constraintTop_toBottomOf="@id/txtTittle"
                tools:text="@string/movie_name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_tiny"
                android:layout_marginTop="@dimen/margin_tiny"
                android:textColor="@color/black"
                android:text="@{movie.type}"
                app:layout_constraintStart_toEndOf="@id/imagePoster"
                app:layout_constraintTop_toBottomOf="@id/txtYear"
                tools:text="@string/movie_name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtImDBId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_tiny"
                android:layout_marginTop="@dimen/margin_tiny"
                android:textColor="@color/black"
                android:text="@{movie.imdbID}"
                app:layout_constraintStart_toEndOf="@id/imagePoster"
                app:layout_constraintTop_toBottomOf="@id/txtType"
                tools:text="@string/movie_name" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="txtImDBId"
                app:layout_constraintTop_toBottomOf="@id/txtImDBId" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>